{
  "printWidth": 80,
  "tabWidth": 2,
  "trailingComma": "all",
  "singleQuote": true,
  "semi": true,
  "importOrder": [
    "^react(-native)?$",
    "<THIRD_PARTY_MODULES>",
    "@api/*",
    "@assets/*",
    "@components/*",
    "@context/*",
    "@screens/*",
    "@storage/*",
    "@theme/*",
    "@types/*",
    "^[./]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "plugins": ["@trivago/prettier-plugin-sort-imports"]
}
